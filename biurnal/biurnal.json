{
  "processes":
  {
    "on_background": { 
      "background": {
        "clear": ["$background"]
      }
    }
  },
  "colors":
  {
    "background": "bdcbdb",
    "foreground": "525252",
    "link": "913636",
    "druplicon": "ebc694"
  },
  "css": ["css/style.css"],
  "images": 
  {
    "img": [
      { "path": "images/menu-sprites.png", "alter": ["on_background"] },
      { "path": "images/menu-sprites-bg.png", "alter": ["on_background"] },
      {
        "path": "images/play.png",
        "alter": [{
          "background": { "clear": ["$link"] },
          "postprocess": { "mask": "images/play-mask.png" }
        }]
      },
      {
        "path": "images/druplicon.png",
        "alter": [{
          "background": { "clear": ["$druplicon"] },
          "postprocess": { "mask": "images/druplicon-mask.png" }
        }]
      }
    ]
  }
}
